const changelog = {
  version: "v3.11",
  titulo: "Actualización de Moderación",
  secciones: [
    {
      tipo: "🔧 Correcciones",
      color: "#e67e22",
      items: [
        'Se corrigió un bug crítico en el comando <code>/unmute</code> que impedía quitar el rol <strong>"Muteado"</strong> correctamente.',
        'Todos los comandos de moderación (<code>/ban</code>, <code>/kick</code>, <code>/mute</code>, <code>/unmute</code>) ahora muestran respuestas en formato <strong>embed</strong>, mejorando la claridad y presentación.',
        'Se mejoró la verificación de jerarquía de roles para evitar errores silenciosos.'
      ]
    },
    {
      tipo: "✨ Mejoras",
      color: "#27ae60",
      items: [
        'Mensajes de error y confirmación ahora son más visuales y profesionales.',
        `Se agregaron colores temáticos a los embeds:
          <ul>
            <li>🔴 Rojo para errores</li>
            <li>🟢 Verde para confirmaciones</li>
            <li>🟠 Naranja para advertencias</li>
          </ul>`
      ]
    },
    {
      tipo: "📌 Próximamente",
      color: "#3498db",
      items: ['Comandos de anime.']
    }
  ]
};

const container = document.getElementById('changelog');
const changelogDiv = document.createElement('div');
changelogDiv.className = 'changelog';
changelogDiv.style.fontFamily = 'Arial, sans-serif';
changelogDiv.style.lineHeight = '1.6';

const versionTitle = document.createElement('h3');
versionTitle.style.color = '#2c3e50';
versionTitle.innerHTML = `📝 ${changelog.version} — ${changelog.titulo}`;
changelogDiv.appendChild(versionTitle);

changelog.secciones.forEach(seccion => {
  const h4 = document.createElement('h4');
  h4.style.color = seccion.color;
  h4.innerHTML = seccion.tipo;
  changelogDiv.appendChild(h4);

  const ul = document.createElement('ul');
  seccion.items.forEach(item => {
    const li = document.createElement('li');
    li.innerHTML = item;
    ul.appendChild(li);
  });

  changelogDiv.appendChild(ul);
});

container.appendChild(changelogDiv);

